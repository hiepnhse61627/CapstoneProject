<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns="http://java.sun.com/xml/ns/persistence" version="2.0">

    <persistence-unit name="NewPersistenceUnit" transaction-type="RESOURCE_LOCAL">
        <provider>org.eclipse.persistence.jpa.PersistenceProvider</provider>
        <class>com.capstone.entities.CourseEntity</class>
        <class>com.capstone.entities.MarksEntity</class>
        <class>com.capstone.entities.RealSemesterEntity</class>
        <class>com.capstone.entities.StudentEntity</class>
        <class>com.capstone.entities.SubjectEntity</class>
        <class>com.capstone.entities.SubjectMarkComponentEntity</class>
        <properties>
            <property name="eclipselink.jdbc.url" value="jdbc:sqlserver://thecapstoneproject.database.windows.net;database=CapstoneProject"/>
            <property name="eclipselink.jdbc.driver" value="com.microsoft.sqlserver.jdbc.SQLServerDriver"/>
            <property name="eclipselink.jdbc.user" value="projectadmin"/>
            <property name="eclipselink.jdbc.password" value="Projectpassword123"/>
        </properties>
    </persistence-unit>
</persistence>
